<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a2"
    tools:context=".Kamus">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Kamus Bahasa Seram"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/textView1"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_blue_bright"
        android:text="    Bahasa Indonesia       "
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txtIndonesia"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"
        android:hint="Masukkan Kata atau Kalimat Disini"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="italic" />
    <Button
        android:id="@+id/txtTranslate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/txtIndonesia"
        android:layout_margin="5dp"
        android:background="@color/teal_200"
        android:onClick="getTranslate"
        android:text="Terjemahkan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/txtTranslate"
        android:layout_margin="1dp"
        android:text="        Bahasa Seram        "
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginLeft="5sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/txtSeram"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"
        android:editable="false"
        android:textColor="@android:color/background_dark"
        android:textSize="17sp"
        android:textStyle="bold"/>


</RelativeLayout>